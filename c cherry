#include <stdio.h>

int main(){
    int a;
    printf("enter no.of unit:");
    scanf("%d&a");
    if (a<=200)
{
    printf("amount=%f",a*1.20);
}
else if(a<=300)
{
    printf("amount=%f",a*1.50);
}
else if (a<=400)
{
    printf("amount=%f",a*1.80);
}
else if (a>=500)
{
    printf("amount=%f",a*2.00+15);
}
else
{
    printf("amount=%f",a*2.50+20);
}
}
